@model IEnumerable<MvcWebUI.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Ürün</h2>
<hr />

<p>
    @Html.ActionLink("Yeni Ürün Ekle", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th style="width: 140px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>

        <td>
            <img src="/Upload/@item.Image" width="70" />
        </td>
        <td>
            @if (item.IsHome)
            {
                <label class="badge badge-success">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Evet
                </label>
            }
            else
            {
                <label class="badge badge-danger">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Hayır
                </label>
            }
        </td>
        <td>
            @if (item.IsApproved)
            {
                <label class="badge badge-success">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Evet
                </label>
            }
            else
            {
                <label class="badge badge-danger">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Hayır
                </label>
            }
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
